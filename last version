#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;

class guessingGame {
private:
    int times;
    int guessNum;
    char guessAlp;
    int secretNum;
    char secretAlp;
    int alphabetHighScore;
    int numberHighScore;
    bool exitMenu;
    int newScore;
    
    
public:
    guessingGame() {
        times=0;
        guessNum=0;
        guessAlp;
        secretNum=0;
        secretAlp;
        alphabetHighScore=0;
        numberHighScore=0;
        newScore=0;
        exitMenu=false;
    }
    
    void numberGuess(){
        int levelChoice;
        int max;
        
        cout << "\nGuess The Number" << endl;
        do{
            cout << "\nStart Menu\n----------" << endl;
            cout << "Select a difficulty level" << endl;
            cout << "1.Easy" << endl;
            cout << "2.Medium" << endl;
            cout << "3.Hard" << endl;
            cout << "4.Back to Main Menu" << endl;
            cout << "===> ";
            cin>> levelChoice;
            
            switch(levelChoice)
            {
               
                case 1:
                    max=15;
                    secretNum=rand() % max +1;
                    times=5;
                    cout << "Guess the Number\n\n----------------" << endl;
                    cout << "Instructions:" << endl;
                    cout << " 1. Guess the number based on given range." << endl;
                    cout << " 2. You are allowed to make one guess at a time." << endl;
                    cout << " 3. Each game has 5 chance yo guess the correct number." << endl;
                    cout << " 4. Once you have used up all your chances, you lost the game." << endl;
                    cout << "\nGood Luck!" << endl;
                    cout << "Easy:" << endl;
                    cout << "Enter guess number from 1 to 15. "<< times << " changes left." << endl;
                    while(times>0){
                        cout << "Guess the number: ";
                        cin >> guessNum;
                        if(secretNum==guessNum){
                            cout << "You won the game" << endl;
                            cout <<"You've won the game with just " <<5-times << " times.";
                            times--;
                            numberHighScore+=5;
                            
                            break;
                        }
                        else if(secretNum>guessNum){
                            cout << "Wrong! your guess was to low" << endl << endl;
                            times--;
                            
                        }
                        else if(secretNum<guessNum){
                            cout << "Wrong! Your guess was to high" << endl;
                            times--;
                        }
                        if (times == 0) {
                            cout << "\nYou lost the game! " << endl;
                        }
                    }
                        
                    break;
                    
                case 2:
                    max=20;
                   
                    secretNum=rand() % max +1;
                    times=4;
                    cout << "Guess the Number\n\n----------------" << endl;
                    cout << "Instructions:" << endl;
                    cout << " 1. Guess the number based on given range." << endl;
                    cout << " 2. You are allowed to make one guess at a time." << endl;
                    cout << " 3. Each game has 5 chance yo guess the correct number." << endl;
                    cout << " 4. Once you have used up all your chances, you lost the game." << endl;
                    cout << "\nGood Luck!" << endl;
                    cout << "Enter guess number from 1 to 20. "<< times << " changes left." << endl;
                    cout << "Medium:" << endl;
                    while(times>0){
                        cout << "Guess the number: ";
                        cin >> guessNum;
                        if(secretNum==guessNum){
                            cout << "You won the game" << endl;
                            cout <<"You've won the game with just " <<4-times << " times.";
                            numberHighScore+= 10;
                            break;
                        }
                        else if(secretNum>guessNum){
                            cout << "Wrong!" << endl << endl;
                            times--;
                        }
                        else if(secretNum<guessNum){
                            cout << "Wrong!" << endl;
                            times--;
                        }
                        if (times == 0) {
                            cout << "\nYou lost the game! " << endl;
                        }
                    }
                    
                    break;
                case 3:
                    max=40;
                   
                    secretNum=rand() % max +1;
                    times=3;
                    cout << "Guess the Number\n\n----------------" << endl;
                    cout << "Instructions:" << endl;
                    cout << " 1. Guess the number based on given range." << endl;
                    cout << " 2. You are allowed to make one guess at a time." << endl;
                    cout << " 3. Each game has 5 chance yo guess the correct number." << endl;
                    cout << " 4. Once you have used up all your chances, you lost the game." << endl;
                    cout << "\nGood Luck!" << endl;
                    cout << "Enter guess number from 1 to 40. "<< times << " changes left." << endl;
                    cout << "Hard:" << endl;
                    while(times>0){
                        cout << "Guess the number: ";
                        cin >> guessNum;
                        if(secretNum==guessNum){
                            cout << "You won the game" << endl;
                            cout <<"You've won the game with just " <<3-times << " times.";
                            numberHighScore+= 15;
                            break;
                        }
                        else if(secretNum>guessNum){
                            cout << "Wrong!" << endl << endl;
                            times--;
                        }
                        else if(secretNum<guessNum){
                            cout << "Wrong!" << endl;
                            times--;
                        }
                        if (times == 0) {
                            cout << "\nYou lost the game! " << endl;
                        }
                    }
                    
                    break;
                case 4: 
                   
                    return;
                default:
                    cout << "Invalid input.Please try again." << endl;
                    break;    
            }
        }
        while (true);   
    }
    
    void alphabetGuess(){
        int levelChoice;
        int maxAlp;
        int rvn;  
        int rcn;  
        int ran;  
        
        char vowels [5] = {'a','e','i','o','u'};
        char consonants [21] = {'b','c','d','f','g','h','j','k','l','m','n','p','q','r','s','t','v','w','x','y','z'};
        char alphabet [26]= {'a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z'};
        do{
            cout << "\nGuess The Alphabet" << endl;
            cout << endl << "Start Menu" << endl << "----------" << endl;
            cout << "Select a difficulty level" << endl;
            cout << "1. Easy" << endl << "2. Medium" << endl << "3. Hard" << endl << "4. Return to main menu" << endl << "===> ";
            cin>> levelChoice;
            switch(levelChoice){
               
                case 1:
                    maxAlp=5;
                    
                    rvn =rand() % maxAlp;
                    
					for(int i = 0 ; i < maxAlp ; i++){
                    	if(i == rvn){
                    		secretAlp = vowels[rvn];
						}
					}

                    times= 2;
                    cout << "Guess the Alphabet\n\n----------------" << endl;
                    cout << "Instructions:" << endl;
                    cout << " 1. Guess the vowel alphabet." << endl;
                    cout << " 2. You are allowed to make one guess at a time." << endl;
                    cout << " 3. Each game has 2 chances to guess the correct vowel." << endl;
                    cout << " 4. Once you have used up all your chances, you lost the game." << endl;
                    cout << "\nGood Luck!" << endl;
                    cout << "Easy:" << endl;
                    while(times>0){
                        cout << "Enter a word: " << times << " changes left. What is the alphabet?" << endl;
                        cin >> guessAlp;
                        if(guessAlp>secretAlp) {
                            cout << "Wrong! Your guess was to high" << endl << endl;
                            times--;
                        }
                        else if (guessAlp<secretAlp) {
                            cout << "Wrong! Your guess was to low" << endl;
                            times--;
                        }
                        if(guessAlp==secretAlp) {
                            cout << "You won the game" << endl;
                            cout <<"You've won the game with just " <<2-times << " times."<<endl;
                            alphabetHighScore+=5;
                            break;
                        }
                        
                        if (times== 0) {
                            cout << "\nYou lost the game! " << endl;
                        }
                    }
                        
                    break;
                case 2:
                    cout << "Guess the Alphabet" << endl << endl;
                    cout << "------------------" << endl;
                    cout << "Instructions:" << endl;
                    cout << "1. Guess the consonant alphabet." << endl;
                    cout << "2. You are allowed to make one guess at a time." << endl;
                    cout << "3. Each game has 4 chances to guess the correct vowel." << endl;
                    cout << "4. Once you have used up all your chances, you lose the game." << endl << endl;
                    cout << "Good Luck!" << endl << "Medium: " << endl;
                   
                    maxAlp=21;
                    
                    rcn =rand() % maxAlp;
                    
					for(int i = 0 ; i < maxAlp ; i++){
                    	if(i == rcn){
                    		secretAlp = vowels[rcn];
						}
					}
                    
                    times= 4;
                    while(times>0){
                        
						cout << "Enter a word: " << times << " changes left. What is the alphabet?" << endl << "Player input:";
                        
                        cin >> guessAlp;
                        if(guessAlp==secretAlp) {
                            cout << "You won the game" << endl;
                            cout <<"You've won the game with just " <<4-times << " times.";
                            alphabetHighScore+=10;
                            break;
                        }
                        if(guessAlp>secretAlp) {
                            cout << "Wrong!" << endl << endl;
                            times--;
                        }
                        else if (guessAlp<secretAlp) {
                            cout << "Wrong!" << endl;
                            times--;
                        }
                        if(times==0){
                            cout << "\nYou lost the game! " << endl;
                        }
                    }
                        
                    break;
                case 3: 
                    cout << "Guess the Alphabet" << endl << endl;
                    cout << "------------------" << endl;
                    cout << "Instructions:" << endl;
                    cout << "1. Guess the alphabet." << endl;
                    cout << "2. You are allowed to make one guess at a time." << endl;
                    cout << "3. Each game has 5 chances to guess the correct vowel." << endl;
                    cout << "4. Once you have used up all your chances, you lose the game." << endl << endl;
                    cout << "Good Luck!" << endl << "Hard: " << endl;
            	
                    maxAlp=26;
                    
                    ran =rand() % maxAlp;
                    
					for(int i = 0 ; i < maxAlp ; i++){
                    	if(i == ran){
                    		secretAlp = vowels[ran];
						}
					}
                    
                    times=5;
                    while(times>0){
                        cout << "Enter an alphabet: " << times << " changes left. What is the alphabet?" << endl << "Player input:";
                        cin>> guessAlp;
                        if(guessAlp==secretAlp) {
                            cout << "You won the game" << endl;
                            cout <<"You've won the game with just " <<5-times << " times.";
                            alphabetHighScore+=15;
                            break;
                        }
                        else if(guessAlp>secretAlp) {
                            cout << "Wrong!" << endl << endl;
                            times--;
                        }
                        else if (guessAlp<secretAlp) {
                            cout << "Wrong!" << endl;
                            times--;
                        }
                        if(times==0){
                            cout << "\nYou lost the game! " << endl;
                        }
                    }  
                    
                    break;
                case 4: 
                   
                    return;
                default:
                    cout << "Invalid input.Please try again" << endl;
                    break;
            }
        }
        while(true);
        
    }
    
    void highScore() const
    {
        	if(alphabetHighScore != 0 && numberHighScore != 0){
        		cout<< "Alphabet Score: "<< alphabetHighScore<< " Number Game Score:"<< numberHighScore<< endl;
            	cout << "Total Score: " << alphabetHighScore +numberHighScore << endl;
			}
			else if(alphabetHighScore > 0 && numberHighScore == 0){
        		cout<< "Alphabet Score: "<< alphabetHighScore<< " Number Game Score: Have not played yet" << endl;
            	cout << "Total Score: " << alphabetHighScore +numberHighScore << endl;
			}
			else if(alphabetHighScore == 0 && numberHighScore > 0){
        		cout<< "Alphabet Score: Have not played yet " << "Number Game Score: " << numberHighScore << endl;
            	cout << "Total Score: " << alphabetHighScore +numberHighScore << endl;
			}
			else if(alphabetHighScore == 0 && numberHighScore == 0){
        		cout<< "Alphabet Score: Have not played yet Number Game Score: Have not played yet"<< endl;
            	cout << "Total Score: " << alphabetHighScore +numberHighScore << endl;
			}
    }
    
    void credit()
    {
        cout << "---------------------------------------------" << endl;
        cout << "       Guessing Game Credits" << endl;
        cout << "---------------------------------------------" << endl;
        cout << " 1. Ayca Nur Mentes - 200209060" << endl;
        cout << "---------------------------------------------" << endl;
        return;
    }
    
    void backToMain(){
        
    }
    
};
int main() {

    guessingGame game;
    int choice;
    do{
        cout << "MENU" << endl << "----" << endl;
        cout << "1. Guess the Number. \n2. Guess the Alphabet. \n3. High Score. \n4. Credit.\n5. Exit.\n" << endl;
        cout << "Enter your choice:";
        cin >>choice;
        switch(choice){
            case 1:
                game.numberGuess();
                break;
            case 2:
                game.alphabetGuess();
                break;
            case 3:
                game.highScore();
                break;
            case 4:
                game.credit();
                break;
            case 5:
                cout << "You are leaving..." << endl;
                exit(EXIT_SUCCESS);
                break;
            default:
                cout << "Invalid input.Please try again!" << endl;
                main();
                break;
     
        }
    }
    while(true);
}
